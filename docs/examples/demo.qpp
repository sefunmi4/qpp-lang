// Demonstration of the Q++ toolchain
// Compile with:
//   qppc docs/examples/demo.qpp demo.ir
// Run with:
//   qpp-run demo.ir
// This program creates a Bell pair and measures it.

task<QPU> bell_demo() {
    qalloc qbit q[2];
    cregister int c[2];

    H(q[0]);
    CX(q[0], q[1]);

    c[0] = measure(q[0]);
    c[1] = measure(q[1]);
}

